{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": ["warn", "never"],
    "comma-spacing": ["error", { "before": false, "after": true }],
    "indent": ["error", 2, {
      "MemberExpression": 1,
      "SwitchCase": 1
    }],
    "no-empty": ["error", { "allowEmptyCatch": true }],
    "no-multiple-empty-lines": ["error"],
    "no-new-symbol": "error",
    "no-undef": ["error"],
    "no-unused-vars": ["warn"],
    "no-console": ["warn"],
    "object-curly-spacing": ["error", "always"],
    "object-shorthand": "error",
    "prefer-const": 2,
    "quotes": ["error", "single"],
    "semi": ["warn", "always"],
    "space-in-parens": ["error", "never"]
  }
}
